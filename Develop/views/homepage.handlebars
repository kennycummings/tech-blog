{{! Include styles in the head of your HTML document }}
<link rel="stylesheet" href="/style.css">

{{#each posts}}
  <article class="blog-post">
    <h2>{{title}}</h2>
    <p class="meta">Posted by {{author}} on {{formattedDate date_created}}</p>
    <div class="content">
      {{truncate content}}
    </div>
    <a href="/post/{{id}}">Read more</a>
  </article>
{{/each}}
